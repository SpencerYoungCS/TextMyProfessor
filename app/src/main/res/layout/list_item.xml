<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timestamp_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/text_item"
        app:layout_constraintTop_toBottomOf="@+id/text_item" />

    <TextView
        android:id="@+id/user_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Professor"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOREM IPSUM DOLOR SJAKDGHAJHGIUAWHGUIAWHUIGHAWEIHGUIEH"
        app:layout_constraintStart_toStartOf="@+id/user_item"
        app:layout_constraintTop_toBottomOf="@+id/user_item" />

</androidx.constraintlayout.widget.ConstraintLayout>